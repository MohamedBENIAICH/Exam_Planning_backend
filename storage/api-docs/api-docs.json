        "/api/classrooms/schedule-exam": {
            "post": {
                "tags": [
                    "Classrooms"
                ],
                "summary": "Schedule an exam in a classroom",
                "operationId": "4cd12f3177b55c445fdca685bc54890e",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "classroom_id",
                                    "exam_id",
                                    "date_examen",
                                    "heure_debut",
                                    "heure_fin"
                                ],
                                "properties": {
                                    "classroom_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "exam_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "date_examen": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2024-03-20"
                                    },
                                    "heure_debut": {
                                        "type": "string",
                                        "format": "time",
                                        "example": "09:00"
                                    },
                                    "heure_fin": {
                                        "type": "string",
                                        "format": "time",
                                        "example": "11:00"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Exam scheduled successfully"
                    },
                    "422": {
                        "description": "Validation error"
                    },
                    "409": {
                        "description": "Classroom not available for the specified time slot"
